import Html exposing (..)
import Html.Attributes exposing (style)
import Html.Events exposing (onClick)

main =
  program
    { init = init "cats" "waiting.gif"
    , view = view
    , update = update
    , subscriptions = subscriptions
    }

-- Defines alias type
type alias Model =
  { topic : String
  , gifUrl : String
  }
  
-- Defines custom type
type Message = Get

subscriptions model = 
  Sub.none

init topic gifUrl =
  (Model topic gifUrl, Cmd.none)

view: Model -> Html Message
view model =
    div []
      [ button [ onClick Get ] [ text "Get" ]
      ]

update: Message -> Model -> (Model, Cmd Message)
update msg model =
  case msg of 
    Get ->
      (model, Cmd.none)
